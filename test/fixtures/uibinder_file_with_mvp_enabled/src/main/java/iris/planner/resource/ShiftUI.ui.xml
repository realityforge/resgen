<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:data_grid="urn:import:iris.gidgets.client.view.ui.data_grid">

  <ui:style type="iris.planner.resource.AbstractSimpleShiftUI.Style">
    @def STRIPE_BACKGROUND_URL resourceUrl("stripe");

    .stripe {
      background-image: STRIPE_BACKGROUND_URL;
      background-size: auto 100%;
      background-repeat: repeat;
    }

    div.canDrop, td.canDrop {
      background-color: #90ee90 !important;
      cursor: pointer !important;
    }

    .pending {
      font-style: italic;
    }

    .header {
      position: relative;
      height: 100%
    }

    .header .icon {
      margin-top: 1px;
      margin-right: 0;
      float: right;
    }

    .header .text {
      position: absolute;
      left: 0;
      top: 3px;
      right: 20px;
      bottom: 0;
      overflow: hidden;
      text-overflow: ellipsis
    }

    .header .action {
      float: left;
      cursor: pointer;
    }

    .fixedTable div {
      overflow: hidden;
    }

    .hiddenRow {
      display: none;
    }

    .column.activeShift {
      background-color: #ffff99;
    }

    .column {
      background-color: #f6f6f6;
    }

    .tooltip {
      padding: 10px;
    }

    .tooltip ul {
      padding-left: 20px;
      margin: 0;
    }

    .tooltip ul li {
      padding-top: 3px;
      padding-bottom: 3px;
    }
  </ui:style>
  <ui:image field="stripe" src="stripe.png"/>
  <g:LayoutPanel ui:field="_gridPanel" height="100%">
    <g:layer top="0px" bottom="0px" width="400px" left="0px">
      <data_grid:ScrollingDataGrid ui:field="_fixedGrid" addStyleNames="{style.fixedTable}"/>
    </g:layer>
    <g:layer top="0px" bottom="0px" left="400px" right="0px">
      <data_grid:ScrollingDataGrid ui:field="_scrollGrid"/>
    </g:layer>
  </g:LayoutPanel>

</ui:UiBinder>
